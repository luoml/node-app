{{#each ideas}}
    <div class="card card-body mb-2">
        <h3>{{title}}</h3>
        <p>{{details}}</p>
        <a href="/ideas/edit/{{_id}}" class="btn btn-dark btn-block">编辑</a>

        <form method="POST" action="/ideas/{{_id}}?_method=DELETE">
            <input type="hidden" name="_method" value="DELETE">
            <button type="submit" class="btn btn-danger btn-block">删除</button>
        </form>
    </div>
{{else}}
    <p>暂无想学的课程！</p>
{{/each}}